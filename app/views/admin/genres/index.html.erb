<div class="container">
  <h4 class="mt-3">ジャンル一覧・追加</h4>
    <div class="row">
      <div class="mx-auto col-6">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <div class="form-group">
            <lavel for="genre_name">ジャンル名</lavel>
            <%= f.text_field :name %>
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        <% end %>
        <table class="table table-hoever table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
</div>
