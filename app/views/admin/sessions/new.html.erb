<%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="container">
    <h3 class="headline">管理者ログイン</h3>
      <div class="row">
        <div class="mx-auto" >
          <table class="table">
            <tbody>
              <tr>
                <td>メールアドレス</td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              </tr>
              <tr>
                <td>パスワード</td>
                <td><%= f.password_field :password, autocomplete: "current-password" %></td>
              </tr>
              <tr></tr>
              <tr>
                <td></td>
                <td><%= f.submit "ログイン", class: "btn btn-sm btn-primary" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
  </div>
<% end %>