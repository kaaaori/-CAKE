<div class="container">
  <div class="mx-auto col-12">
    <div class="row">
      <h4 class="mt-3 col-5">
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
      </h4>
    </div>
    <div class="mt-5 row">
      <div class="col-11">
        <p>会員ID　　　　  　<%= @customer.id %></p>
        <p>氏名　　　　　　  <%= @customer.last_name %><%= @customer.first_name %></p>
        <p>フリガ　　　　　  <%= @customer.last_name_kana %><%= @customer.first_name_kana %></p>
        <p>郵便番号　　　　  <%= @customer.postal_code %></p>
        <p>住所　　　　　　  <%= @customer.address %></p>
        <p>電話番号　　　　  <%= @customer.telephone_number %></p>
        <p>メールアドレス　  <%= @customer.email %></p>
        <p>ステータス　</p>
      </div>
    </div>
    <div class="mt-3 ml-5 row">
      <div class="col-2">
  　　　　　<%= link_to "編集する", edit_admin_customer_path, class: "btn btn-sm btn-success" %>
      </div>
      <div class="col-2">
        <%= link_to "注文履歴一覧を見る", edit_admin_customer_path, class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
</div>
