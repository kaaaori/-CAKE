<div class="container">
  <div class="mx-auto col-8">
    <div class="row">
      <h4 class="mt-3 col-11">商品一覧</h4>
      <%= link_to new_admin_item_path, class:"mt-3 col-1" do %>
        <i class="far fa-plus-square fa-2x"></i>
      <% end %>
    </div>
    <div class="row">
      <table class="table table-hoever table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル名</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
