<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="container">
    <h3 class="headline">新規会員登録</h3>
    <div class="row">
      <div class="mx-auto col-8">
        <div class="form-group row">
          <%=f.label :input_name, "氏名", class:"col-2"%>
          <div class="col-5">
            <%= f.label :姓 %>
            <%= f.text_field :last_name, autofocus: true, id:"inputName" %>
          </div>
          <div class="col-5">
            <%= f.label :名 %>
            <%= f.text_field :first_name, autofocus: true, id:"inputName" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_name, "フリガナ", class:"col-2"%>
          <div class="col-5">
            <%= f.label :ｾｲ %>
            <%= f.text_field :last_name_kana, autofocus: true, id:"inputName" %>
          </div>
          <div class="col-5">
            <%= f.label :ﾒｲ %>
            <%= f.text_field :first_name_kana, autofocus: true, id:"inputName" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_name, "メールアドレス", class:"col-4"%>
          <div class="col-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"inputEmail" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_postal_code, "郵便番号(ハイフンなし)", class:"col-4"%>
          <div class="col-8">
          <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_address, "住所", class:"col-4"%>
          <div class="col-8">
            <%= f.text_field :address, autofocus: true, id:"inputAddress" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_name, "電話番号(ハイフンなし)", class:"col-4"%>
          <div class="col-8">
            <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumbere" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_password, "パスワード(6文字以上)", class:"col-4"%>
          <div class="col-8">
            <%= f.password_field :password, autocomplete: "new-password", id:"inputPassword" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_password_confirmation, "パスワード(確認用)", class:"col-4"%>
          <div class="col-8">
            <%= f.text_field :password_confirmation, autocomplete: "new-password", id:"inputTelephoneNumbere" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.submit "新規登録", class: "btn btn-sm btn-success col-3" %>
        </div>
      </div>
    </div>
    
    <h3><span class=".bg-light.bg-opacity-75">既に登録済みの方</span></h3>
    <!--背景色できていない↑-->
     <%= link_to "こちら", new_customer_session_path %> からログインしてください。
  </div>
<% end %>
