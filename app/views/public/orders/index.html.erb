注文履歴一覧
<div class="container">
  <div class="row">
    <div class="mx-auto col-12">
      <table class="table">
        <thead>
          <tr bgcolor="#e8e8e8">
            <td>注文日</td>
            <td>配送先</td>
            <td>注文商品</td>
            <td>支払金額</td>
            <td>注文詳細</td>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%=  l order.created_at %></td>
              <td><%= order.address_display%></td>
              <td>
                <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %> <br>
              <% end %></td>
              <td><%= order.total %>円</td>
              <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>