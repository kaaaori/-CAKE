<div class="colspan">
  <div class="row">
    <div class="mx-auto col-6">
      <div class="form-group row">
        <div class="col-auto">
          <h5 class="mt-5">登録情報</h5>
        </div>
        <div class="col-auto mt-5">
          <%= link_to "　編集する　", customers_information_edit_path, class: "btn btn-sm btn-success" %>
        </div>
      </div>
      <table class="table mt-3", border="1", rules="all">
        <tr>
          <td bgcolor="#f5f5f5">氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td bgcolor="#f5f5f5">カナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td bgcolor="#f5f5f5">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td bgcolor="#f5f5f5">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td bgcolor="#f5f5f5">電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td bgcolor="#f5f5f5">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <div class="form-group row">
        <div class="col-2">
          <h5>配送先</h5>
        </div>
        <div class="col-2">
          <%= link_to "　一覧を見る　", customers_information_edit_path, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-2">
          <h5>注文履歴</h5>
        </div>
        <div class="col-2">
          <%= link_to "　一覧を見る　", orders_path, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>  