<p id="notice"><%= flash[:notice] %></p>
<div class="container">
  <div class="row">
    <div class="mx-auto col-6" >
      <h2>会員情報編集</h2>
      <div class="errorblock">
        <% if @customer.errors.any? %>
          <div class="alert">
            <h3><%= @customer.errors.count %> error prohibited this obj from being saved:</h3>
              <ul>
                <% @coustomer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          </div>
        <% end %>
      </div>
    
      <%= form_with model: @customer, url: customers_information_path do |f| %>
        <div class="form-group row">
          <%=f.label :input_name, "氏名", class:"col-4"%>
          <div class="col-4">
          <%= f.text_field :last_name, autofocus: true, id:"inputName" %>
          </div>
          <div class="col-4">
          <%= f.text_field :first_name, autofocus: true, id:"inputName" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_name_kana, "フリガナ", class:"col-4"%>
          <div class="col-4">
          <%= f.text_field :last_name_kana, autofocus: true, id:"inputNameKana" %>
          </div>
          <div class="col-4">
          <%= f.text_field :first_name_kana, autofocus: true, id:"inputNameKana" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_postal_code, "郵便番号", class:"col-4"%>
          <div class="col-4">
          <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_address, "住所", class:"col-4"%>
          <div class="col-8">
          <%= f.text_field :address, autofocus: true, id:"inputAddress" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_telephone_number, "電話番号", class:"col-4"%>
          <div class="col-4">
          <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumbere" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_email, "メールアドレス", class:"col-4"%>
          <div class="col-4">
          <%= f.text_field :email, autofocus: true, id:"inputEmail" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger"%>
        </div>
      <% end %>
    </div> 
  </div>
</div>