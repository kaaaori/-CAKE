<div class="container">
  <div class="row">
    <div class="col-3">
      <%=render 'admin/genres/genresearch', genres: @genres %>
    </div>
    
    <div class="col-9">
      <h5 class="mt-3">
        <% if params[:genre_id] %>
          <%= @genre.name %>一覧
        <% else %>
          商品一覧
        <% end %>
      </h5>
      <br>
       <div class="row mx-auto row-cols-4">
          <% @items.each do |item| %>
          <div class="col">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image(150,150) %>
            <% end %>
            <p><%= link_to item.name, item_path(item.id) %></p>
            <p>¥<%= item.with_tax_price %></p>
          </div>
          <% end %>
        </div>
        <%= paginate @items %>
    </div>
  </div>
</div>