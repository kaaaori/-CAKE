<div class="container">
  <div class="row">
    <div class="col-3">
      <%=render 'admin/genres/genresearch', genres: @genres %>
    </div>
    <div class="col-9">
      <h5 class="mt-3">
        <% if params[:genre_id] %>
          <%= @genre.name %>一覧
        <% else %>
          商品一覧
        <% end %>
      </h5>
        <% @items.each do |item| %>
        <div>
          <%= image_tag item.get_image %>
          <p><%= link_to item.name, item_path(item.id) %></p>
          <p>¥<%= item.price %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>